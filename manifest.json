{
  "manifest_version": 3,
  "name": "TTX",
  "version": "1.0",
  "description": "View your favorite Creators Stock Live.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.twitch.tv/*"],
      "js": ["src/content/content.js"],
      "css": ["src/popup/popup.css"]
    }
  ],
  "host_permissions": [
    "https://api.ttx.gg/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "src/popup/popup.html",
    "default_title": "TTX Controls"
  },
  "background": {
    "service_worker": "src/background.js"
  }
}